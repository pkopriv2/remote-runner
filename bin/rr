#! /bin/bash -f

export rr_home=${rr_home:-$HOME/.rr}

source $rr_home/require.sh

declare -A globals
declare -A attributes

require "lib/msg.sh"

IFS=$'\n'

help() {
	info "** Remote-Runner Help **"
	echo 

	local subcommands=( run cmd key host role archive )
	for cmd in "${subcommands[@]}" 
	do
		require "$cmd.sh" 
		"$cmd"_help "${@}"
		echo 
	done
}

args=( "${@}" )
action="${args[0]}"
shift

case "$action" in
	key|host|role|archive|run|cmd)
		require "$action.sh" 

		"$action"_action "${@}"
		;;
	*)
		help "${@}"
		;;	
esac
